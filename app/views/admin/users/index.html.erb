<h1>Usuarios</h1>
<p>
	<%= link_to 'Nuevo usuario', new_admin_user_path %> |
	<%= link_to 'Exportar a Excel', admin_users_url(:xls) %>
</p>
<table>
	<tr>
		<th>Id</th>
		<th>Usuario</th>
		<th>Nombre</th>
		<th>e-mail</th>
		<th>Ultimo log-in</th>
		<th>Ultima ip</th>
		<th>Links</th>
		<th>Borrar</th>
	</tr>
	<% @users.each do |user| %>
		<tr>
			<td align='right'><%=h user.id %></td>
			<td><%= link_to user.login, edit_admin_user_path(user) %></td>
			<td><%=h user.nombre %></td>
			<td><%=h user.email %></td>
			<td><%=h user.last_login_at %></td>
			<td><%=h user.last_login_ip %></td>
			<td><%#=button_to ' => ', admin_user_links_path(user), :method => :get %></td>
			<td id='link' align='center'>
				<%#=button_to 'X', user, :confirm => 'Esta seguro ?',
					:method => :delete, :disabled => permiso?('B') %>
				<%=button_to 'X', user, :confirm => 'Esta seguro ?', :method => :delete %>
			</td>
		</tr>
	<% end %>
</table>
<p>
	<%= link_to 'Cerrar', :root %>
</p>
